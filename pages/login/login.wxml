<!--index.wxml-->
<view class="container">
<form bindsubmit="formSubmit" bindreset="formReset" class="weui-cells">
   
  <view class="weui-cell" >
    <view class="weui-label">手机号：</view>
    <input   bindinput="getDriverMobile" name="input" placeholder="please input here" />
  </view>
  <view class="weui-cell" >
    <view class="weui-label">验证码：</view>
    <input name="input" placeholder="please input here" />
    <button class="btn-verify" formType="reset" size="mini">获取验证码</button>
  </view>
  
</form>
<view class="btn-area">
    <button  type="primary"  formType="submit" bindtap="bindWechatAndLogin">登陆</button>
</view>
 
</view>

